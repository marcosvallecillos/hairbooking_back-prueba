{% extends 'base.html.twig' %}

{% block title %}Reservas{% endblock %}

{% block body %}
    <h1>Reservas</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reserva.id }}</td>
            </tr>
            <tr>
                <th>Servicio</th>
                <td>{{ reserva.servicio }}</td>
            </tr>
            <tr>
                <th>Peluquero</th>
                <td>{{ reserva.peluquero }}</td>
            </tr>
            <tr>
                <th>Dia</th>
                <td>{{ reserva.dia ? reserva.dia|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Hora</th>
                <td>{{ reserva.hora ? reserva.hora|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_reservas_index') }}">back to list</a>

    <a href="{{ path('app_reservas_edit', {'id': reserva.id}) }}">edit</a>

    {{ include('reservas/_delete_form.html.twig') }}
{% endblock %}
