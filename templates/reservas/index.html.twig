{% extends 'base.html.twig' %}

{% block title %}Reservas index{% endblock %}

{% block body %}
    <h1>Reservas index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Servicio</th>
                <th>Peluquero</th>
                <th>Dia</th>
                <th>Hora</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reserva in reservas %}
            <tr>
                <td>{{ reserva.id }}</td>
                <td>{{ reserva.servicio }}</td>
                <td>{{ reserva.peluquero }}</td>
                <td>{{ reserva.dia ? reserva.dia|date('Y-m-d') : '' }}</td>
                <td>{{ reserva.hora ? reserva.hora|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_reservas_show', {'id': reserva.id}) }}">show</a>
                    <a href="{{ path('app_reservas_edit', {'id': reserva.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reservas_new') }}">Create new</a>
{% endblock %}
