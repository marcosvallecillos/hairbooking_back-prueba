{% extends 'base.html.twig' %}

{% block title %}Productos index{% endblock %}

{% block body %}
    <h1>Productos index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Image</th>
                <th>Cantidad</th>
                <th>IsFavorite</th>
                <th>InsideCart</th>
                <th>Fecha</th>
                <th>Categoria</th>
                <th>Subcategoria</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for producto in productos %}
            <tr>
                <td>{{ producto.id }}</td>
                <td>{{ producto.name }}</td>
                <td>{{ producto.price }}</td>
                <td>{{ producto.image }}</td>
                <td>{{ producto.cantidad }}</td>
                <td>{{ producto.isFavorite ? 'Yes' : 'No' }}</td>
                <td>{{ producto.insideCart ? 'Yes' : 'No' }}</td>
                <td>{{ producto.fecha ? producto.fecha|date('Y-m-d') : '' }}</td>
                <td>{{ producto.categoria }}</td>
                <td>{{ producto.subcategoria }}</td>
                <td>
                    <a href="{{ path('app_productos_show', {'id': producto.id}) }}">show</a>
                    <a href="{{ path('app_productos_edit', {'id': producto.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_productos_new') }}">Create new</a>
{% endblock %}
